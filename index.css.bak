/* navigation content left */

#nav {
 text-align: left;
 float: left;
 width: 35%;
 height: 100%;

/*
 background-color: #4682B4;
*/
 background-image: url("images/background-fish.png");

 background-size: cover;
 background-repeat: no-repeat;

 font: 14px/21px arial, sans-serif;
 font-style: italic;
}

/* body content right */
#mycontent {
 
 border-radius:10px 10px 10px 10px;

 text-align: justify;

 margin-left: 40%;
 margin-right: 17%;

 height: 94%;
 overflow-y: auto;

 padding: 20px;
 
 background-color: white;

}



/* fields for forms */
label{
    display: inline-block;
    float: left;
    clear: left;
    margin: 2%;
    width: 15%;
    text-align: left;
}
input{
  display: inline-block;
  margin: 1%;
  padding: 1%;
  width: 40%;
}
 textarea{
  margin: 1%;
  padding: 1%;
  width: 40%;
}

.formfield * {
    vertical-align: top;
}



body { 
background-color: #202020;

font: 14px/21px arial, sans-serif;
font-style: italic;
}

.border_top {
 border-top: 1px solid white;
 border-bottom: 1px solid white;
}

.border {      
  border-bottom: 1px solid white; 
}

ul {
 /* list without bullets */
 list-style: none;
 margin-left: 40%;
 margin-top: 20%;
 width: 40%;
 color: white;
 
}

/* navigation bar */
nav ul a {
    padding: 8px;
    text-decoration: none;
    display: block;
    color: #585858;
}

nav ul li a:hover {
  /* box-shadow: 0 0 10px rgba(0, 0, 0, 0.1), inset 0 0 1px rgba(255, 255, 255, 0.6); */
  /* background: rgba(255, 255, 255, 0.1); */
  color: white;
}

nav ul li a:active {
  /* box-shadow: 0 0 10px rgba(0, 0, 0, 0.1), inset 0 0 1px rgba(255, 255, 255, 0.6); */
  /* background: rgba(255, 255, 255, 0.1); */
  color: green;
}

/* current page */
#currentpage a {
color: white;
}
#mycontent1 {
 margin-top: 1%;
 margin-bottom: 1%;
 padding-left: 2%;
 padding-right: 2%;
 padding-bottom: 10px;
 display: inline-block;
 background-color: gray;
 text-align: justify;
 width: 96%
}

/* Demo credits stuff */
h1#author {
  position: fixed;
  bottom: 1px;
  text-align: center;
  color: #30303f;
  width: 100%;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.2) 25%, rgba(255, 255, 255, 0.2) 75%, rgba(255, 255, 255, 0) 100%);
  padding: 10px 0;
  font-family: "Nixie One";
  text-stroke: 1px;
  font-size: 12px;
  text-shadow: 0 0 10px #aaaaaa;
  font-family: "Roboto"
}
h1#author a {
  color: red;
  text-decoration: none;
}

#embeded {
 width="720";
 height="540";
}
